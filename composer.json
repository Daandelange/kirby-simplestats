{
    "name": "daandelange/simplestats",
    "description": "Simple visitor analytics for your Kirby website.",
    "type": "kirby-plugin",
    "version": "1.0.0-alpha.8",
    "license": "MIT",
    "homepage": "https://github.com/Daandelange/kirby-simplestats#readme",
    "authors": [
        {
            "name": "Daan de Lange",
            "role": "Creator"
        },
        {
            "name": "Bogdan Condorachi",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "whichbrowser/parser": "^2.1",
        "simplestats/referer-parser": "^1.0",
        "getkirby/composer-installer": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "daandelange\\SimpleStats\\": "src/models/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"copy('https://s3-eu-west-1.amazonaws.com/snowplow-hosted-assets/third-party/referer-parser/referers-latest.yaml', 'vendor/simplestats/referer-parser/data/referers.yml'); copy('https://s3-eu-west-1.amazonaws.com/snowplow-hosted-assets/third-party/referer-parser/referers-latest.json', 'vendor/simplestats/referer-parser/data/referers.json');\""
        ],
        "post-update-cmd": [
            "@php -r \"copy('https://s3-eu-west-1.amazonaws.com/snowplow-hosted-assets/third-party/referer-parser/referers-latest.yaml', 'vendor/simplestats/referer-parser/data/referers.yml'); copy('https://s3-eu-west-1.amazonaws.com/snowplow-hosted-assets/third-party/referer-parser/referers-latest.json', 'vendor/simplestats/referer-parser/data/referers.json');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "extra": {
        "installer-name": "simplestats"
    }
}
